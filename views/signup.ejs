<%- include('header') %>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <form class="form-horizontal" method="post" enctype="multipart/form-data">
        <fieldset>
          <legend>管理员注册</legend>
          <div class="form-group">
            <label for="name" class="col-md-2 control-label">用户名</label>

            <div class="col-md-10">
              <input type="text" class="form-control" id="name" placeholder="用户名" name="name">
            </div>
          </div>
          <div class="form-group">
            <label for="password" class="col-md-2 control-label">密码</label>

            <div class="col-md-10">
              <input type="password" class="form-control" id="password" placeholder="密码" name="password">
            </div>
          </div>
          <div class="form-group">
            <label for="repassword" class="col-md-2 control-label">重复密码</label>

            <div class="col-md-10">
              <input type="password" class="form-control" id="repassword" placeholder="重复密码" name="repassword">
            </div>
          </div>
          <div class="form-group">
            <label for="gender" class="col-md-2 control-label">性别</label>

            <div class="col-md-10">
              <select id="gender" class="form-control" name="gender">
                <option value="m">男</option>
                <option value="f">女</option>
                <option value="x">保密</option>
              </select>
            </div>
          </div>
          <div class="form-group">
            <label for="inputFile" class="col-md-2 control-label">头像</label>

            <div class="col-md-10">
              <input type="text" readonly="" class="form-control" placeholder="打开...">
              <input type="file" id="inputFile" multiple="" name="avatar">
            </div>
          </div>
          <div class="form-group">
            <label for="textArea" class="col-md-2 control-label">个人简介</label>

            <div class="col-md-10">
              <textarea class="form-control" rows="3" id="textArea" name="bio"></textarea>
              <span class="help-block">输入一些个人简介信息，例如负责的项目内容，所在部门等等。</span>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-10 col-md-offset-2">
              <input type="submit" class="btn btn-primary btn-lg btn-block btn-raised" value="注册">
            </div>
          </div>
        </fieldset>
      </form>
    </div>
  </div>
</div>

<%- include('footer') %>