<div class="thumbnail well well-sm">
  <img src="/images/cover/<%= goods.cover %>" alt="<%= goods.name %>">
  <div class="caption">
    <h3><%= goods.name %></h3>
    <p><%= goods.desc %></p>
    <p><%= goods.price %></p>
    <p><%= goods.remian %> </p>


    <% if(admin && goods.author._id && admin._id.toString() === goods.author._id.toString()) { %>
      <a href="/goods/<%= goods._id %>/edit" class="btn btn-raised btn-primary">编辑</a>
      <a href="/goods/<%= goods._id %>/remove" class="btn btn-raised btn-danger">删除</a>
    <% } else { %>
      <div class="list-group">
        <div class="list-group-item">
          <div class="row-picture">
            <a href="/goods?author=<%= goods.author._id %>">
              <img class="circle" src="/images/avatar/<%= goods.author.avatar %>" alt="icon">
            </a>
          </div>
          <div class="row-content">
            <h4 class="list-group-item-heading"><%= goods.author.name %></h4>

            <p class="list-group-item-text"><%= goods.author.bio %></p>
          </div>
        </div>
        <div class="list-group-separator"></div>
      </div>
    <% } %>
  </div>
</div>

